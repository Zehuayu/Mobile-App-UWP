<Page x:ConnectionId='1'
    x:Class="Storage_management_System.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Storage_management_System"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <GridView x:ConnectionId='2' Name="MenuItemGrid"
                                              
            HorizontalAlignment= "Stretch"
            Margin = "0,-9,10,141">
            <GridView.ItemTemplate>
                <DataTemplate                             >
                    <Grid x:ConnectionId='4' Background="White"
                          Margin="10"
                          Height="270"
                          Width="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>
                        <Image x:ConnectionId='5' Name="myImage"
                                                      />
                        <StackPanel Grid.Row="1" Margin="10">
                            <TextBlock x:ConnectionId='6'                     
                                       Name="NameTxt"
                                       FontSize="15"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:ConnectionId='7'                     
                                       Name="LeftTxt"
                                       FontSize="15"
                                       TextWrapping="Wrap"/>
                        </StackPanel>


                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <Button x:ConnectionId='3' x:Name="M_back_button" Content="Home" HorizontalAlignment="Center" Margin="36,602,952,0" VerticalAlignment="Top" Width="292" Height="84" FontSize="20" FontWeight="Bold"                      RenderTransformOrigin="0.469,0.464">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Page>

